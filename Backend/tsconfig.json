{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./build",                                  
    "esModuleInterop": true,                                                   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "resolveJsonModule": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["./src/**/*"],
  "exclude": ["./build"]
}
